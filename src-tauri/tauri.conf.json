{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "crosshair",
  "version": "0.1.0",
  "identifier": "com.jquesada2016.crosshair.app",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build",
    "beforeDevCommand": "npm run build:res && npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "crosshair",
        "width": 800,
        "height": 600,
        "fullscreen": true,
        "transparent": true,
        "zoomHotkeysEnabled": false,
        "focus": false
      }
    ],
    "security": {
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}