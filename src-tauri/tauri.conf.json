{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "crosshair",
  "version": "0.1.0",
  "identifier": "com.dinocorp.crosshair",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Crosshair",
        "label": "crosshair",
        "url": "/crosshair.html",
        "maximized": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visibleOnAllWorkspaces": true,
        "visible": false
      },
      {
        "title": "Settings",
        "label": "Settings",
        "url": "/settings.html",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}