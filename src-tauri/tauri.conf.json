{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "crosshair",
  "version": "0.1.0",
  "identifier": "com.jquesada2016.crosshair.app",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "crosshair",
        "width": 800,
        "height": 600,
        "transparent": true,
        "zoomHotkeysEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}